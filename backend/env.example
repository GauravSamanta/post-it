# Project settings
PROJECT_NAME=Post-It Notes API
VERSION=1.0.0
DESCRIPTION=A production-ready FastAPI application for post-it notes
ENVIRONMENT=development
DEBUG=false

# Security
SECRET_KEY=your-secret-key-here-must-be-at-least-32-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Database
DATABASE_URL=sqlite:///./app.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Redis
REDIS_URL=redis://localhost:6379

# CORS Origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Trusted Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,*

# Logging
LOG_LEVEL=INFO

# Superuser
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

